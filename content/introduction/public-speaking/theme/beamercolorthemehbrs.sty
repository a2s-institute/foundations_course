\mode<presentation>

	\definecolor{hbrsblue}{RGB}{1,106,186}

	\setbeamercolor{palette tertiary}{use=structure,bg=white,fg=hbrsblue}

  %% Title
  \setbeamercolor{title}{bg=white, fg=hbrsblue}
  \setbeamercolor{author}{bg=white, fg=black}
  %\setbeamercolor{title}{fg=hbrsblue}
  \setbeamercolor{frametitle}{fg=hbrsblue}
  \setbeamercolor{framesubtitle}{fg=black}
  \setbeamercolor{date}{fg=black}
  \setbeamercolor{title in head/foot}{fg=hbrsblue}
  \setbeamercolor{date in head/foot}{fg=hbrsblue}
  \setbeamercolor{caption name}{fg=hbrsblue}
  \setbeamercolor{section in toc}{fg=hbrsblue}

  %% Figures, captions and bullets
  \setbeamertemplate{caption}[numbered]
  \setbeamertemplate{section in toc}[sections numbered]
  \setbeamertemplate{subsection in toc}[subsections numbered]

  %%Items, footnotes and links
  \setbeamercolor*{item}{fg=hbrsblue}
  \setbeamercolor*{footnote mark}{fg=hbrsblue}
  \hypersetup{urlcolor=hbrsblue}

  %% Blocks
  \setbeamercolor{block title}{%
    fg=white, bg=hbrsblue}
  \setbeamercolor{block title example}{%
    fg=white, bg=hbrsblue}
  \setbeamercolor{block title alerted}{%
    fg=white, bg=red}
  \setbeamercolor{block body}{%
    fg=hbrsblue, bg=gray!20!white}

    % Navigation symbols
    \setbeamercolor{navigation symbols}{use=hbrsblue,fg=hbrsblue!80!bg}
    \setbeamercolor{navigation symbols dimmed}{use=hbrsblue,fg=hbrsblue!60!bg}

\mode
<all>
